<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat" />

    <style name="AppTheme.LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color11</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:windowBackground">@color/color16</item>
        <item name="windowNoTitle">true</item>
        <item name="cardViewStyle">@style/CardViewStyle.Light</item>
        <item name="android:scrollbarThumbVertical">@drawable/app_scroll_thumb_light</item>
        <item name="android:scrollbarTrackVertical">@drawable/app_scroll_track_light</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/app_scroll_thumb_light</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/app_scroll_track_light</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarFadeDuration">600</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">500</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollViewStyle">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textColorTertiaryInverse">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimaryDisableOnly">@color/black</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemLight</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropItemLight</item>
        <item name="colorSwitchThumbNormal">@color/gray_new</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="colorControlActivated">@color/green_new</item>
        <item name="ToolbarBackground">@color/white</item>
        <item name="ColorDarkLight">@color/black</item>
        <item name="ColorLayerControl">@color/dark_gray</item>

    </style>

    <style name="AppTheme.DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color6</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="cardViewStyle">@style/CardViewStyle.Dark</item>
        <item name="android:scrollbarThumbVertical">@drawable/app_scroll_thumb_dark</item>
        <item name="android:scrollbarTrackVertical">@drawable/app_scroll_track_dark</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/app_scroll_thumb_dark</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/app_scroll_track_dark</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarFadeDuration">600</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">500</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollViewStyle">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:textColorTertiaryInverse">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimaryDisableOnly">@color/white</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemDark</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropItemDark</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="colorControlActivated">@color/green_new</item>
        <item name="ToolbarBackground">@color/color6</item>
        <item name="ColorDarkLight">@color/white</item>
        <item name="ColorLayerControl">@color/color13</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView" />

    <style name="CardViewStyle.Dark">
        <item name="cardBackgroundColor">@color/color6</item>
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
    </style>

    <style name="CardViewStyle.Light">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
    </style>


    <style name="scrollbar_horizontal_style">
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:scrollbarFadeDuration">600</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">500</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/app_scroll_thumb_light</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/app_scroll_track_light</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="scrollbar_vertical_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:scrollbarFadeDuration">600</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
        <item name="android:scrollbarThumbVertical">@drawable/app_scroll_thumb_light</item>
        <item name="android:scrollbarTrackVertical">@drawable/app_scroll_track_light</item>
        <item name="android:fadeScrollbars">true</item>
    </style>


    <style name="SpinnerItemLight">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SpinnerItemDark">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SpinnerDropItemLight">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="SpinnerDropItemDark">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="counterText">
        <item name="android:textColor">@color/green_new</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">@color/red_new</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>